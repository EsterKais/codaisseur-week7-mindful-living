<!-- SEARCH STUFF -->
<div class="SearchField">
<div><%= form_tag courses_path, :method => 'get' do %>
<%= text_field_tag :search, params[:search], placeholder: "search for a course..", class: "form-control"%></div>
<% end %>
<!-- END OF SEARCH FIELD -->

<h3 class="page-header"> COURSES </h3>

<div class="filtering">
  <%= link_to "Order A-Z", by_course_name_courses_path %>
  <%= link_to "Order by latest", by_latest_courses_path %>
  <%= link_to "All", courses_path %>
</div>

  <ul>
    <% @courses.each do |course| %>
    <li>
      <span> Course: "<%= link_to course.course_name, course_path(course.id) %>"</span>
      <span> By: <%= course.profiles.first.first_name %></span>
    </li>
    <% end %>
  </ul>
